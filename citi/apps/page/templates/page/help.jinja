    <script type="text/javascript">
        $(function() {
            $("#help_middle_nav1").click(function(){
                $("#help_middle").css({"background":"#7abe9f"});
                $("#help_middle_text2").css({"opacity":0});
                $("#help_middle_text3").css({"opacity":0});
