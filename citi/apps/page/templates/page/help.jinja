                $("#help_main1").show(0);
                $("#help_main2").hide(0);
                $("#help_main3").hide(0);
                $("#help_main4").hide(0);
            })
            $("#help_middle_nav2").click(function(){
                $("#help_middle").css({"background":"#FF7A4D"});
                $("#help_middle_text1").css({"opacity":0});
                $("#help_middle_text3").css({"opacity":0});
                $("#help_middle_text4").css({"opacity":0});
                $("#help_middle_text2").css({"opacity":1});
                $("#help_main1").hide(0);
                $("#help_main2").show(0);
                $("#help_main3").hide(0);
                $("#help_main4").hide(0);
            })
            $("#help_middle_nav3").click(function(){
                $("#help_middle").css({"background":"#99CA6E"});
                $("#help_middle_text1").css({"opacity":0});
                $("#help_middle_text2").css({"opacity":0});
                $("#help_middle_text4").css({"opacity":0});
                $("#help_middle_text3").css({"opacity":1});
                $("#help_main1").hide(0);
                $("#help_main2").hide(0);
                $("#help_main3").show(0);
                $("#help_main4").hide(0);
            })
            $("#help_middle_nav4").click(function(){
                $("#help_middle").css({"background":"#00A3D9"});
                $("#help_middle_text1").css({"opacity":0});
                $("#help_middle_text2").css({"opacity":0});
                $("#help_middle_text3").css({"opacity":0});
                $("#help_middle_text4").css({"opacity":1});
                $("#help_main1").hide(0);
                $("#help_main2").hide(0);
                $("#help_main3").hide(0);
                $("#help_main4").show(0);
            })
        })
