    <style type="text/css">
        *{
            margin: 0;
            padding: 0;
        }
        body{
            background: #f4f4f4;
        }
        .nav{
            height: 78px;
            width: 100%;
            background: #7abe9f;
        }
        .help_top{
            margin: 0 auto;
            height: 480px;
            width: 980px;
            display: table;
        }
        .help_top_logo{
            width: 140px;
            height: 140px;
            background: #7abe9f;
            margin: 160px auto 0 auto;
            background: url("/static/img/logo.svg");
        }
        .help_top_title{
            width: 100%;
            text-align: center;
            color: #6e6e6e;
        }
        .help_top_title>.text1{
            margin-top: 50px;
            font-family: "微软雅黑","黑体";
            font-size: 26px;
        }
        .help_top_title>.text2{
            font-family: "微软雅黑","黑体";
            font-size: 16px;
        }
        .help_middle{
            width: 100%;
            height: 340px;
            background: #7abe9f;
            margin-top: 49px;
            display: table;
            transition:background 1s;
        }
        .help_middle_inner{
            position: relative;
            width: 620px;
            height: 340px;
            margin: 0 auto;
        }
        .help_middle_nav{
            margin: -49px auto 0 auto;
            width: 444px;
            height: 98px;
        }
        .help_middle_nav>.navs{
