        }
        .help_middle_nav>.navs>div:hover{
            width: 94px;
            height: 69px;
            margin: 2px;
            padding-top: 25px;
        }
        .help_middle_text{
            position: absolute;
            top: 60px;
            width: 620px;
            line-height: 22px;
            font-family: "微软雅黑","黑体";
            color: #fff;
            font-size: 16px;
        }
        .help_main{
            width:100%;
        }
        .help_main>.title{
            font-family: "微软雅黑","黑体";
            font-size: 22px;
            height: 250px;
            line-height: 300px;
            color: #6e6e6e;
            text-align: center;
        }
        .help_main>.line{
            margin: 50px 0;
            width: 100%;
            height:4px;
            background: #ccc;
            position: relative;
        }
        .help_main>.line>.line_inner{
            width: 600px;
            height: 4px;
            margin: 0 auto;
            position: relative;
        }
        .help_main>.line>.line_inner>.points{
            position: absolute;
            top: -8px;
            width: 600px;
            height: 20px;
        }
        .help_main>.line>.line_inner>.points>.point{
            width: 16px;
            height: 16px;
            border: 2px solid #C9E4D8;
            margin: 0 50px;
            background: #7abe9f;
            border-radius: 50%;
            float: left;
            position: relative;
        }
        .help_main>.line>.line_inner>.points>.point>div{
            font-family: "微软雅黑","黑体";
            text-align: center;
            left: -90px;
            top: -50px;
            position: absolute;
            width: 200px;
            color: #6e6e6e;
            font-size: 16px;
        }
        .help_main>.line>.line_inner>.points>.point>dd{
            font-family: "微软雅黑","黑体";
            text-align: center;
            top: 50px;
            left: -90px;
            position: absolute;
            width: 200px;
            color: #6e6e6e;
            font-size: 16px;
        }
        .help_main>.img{
            width: 872px;
            height: 590px;
            margin: 0 auto;
        }
        .bottom{
            width: 100%;
            height: 433px;
            background: #7abe9f;
        }
        #help_middle_text2{
            opacity: 0;
            line-height: 30px;
        }
        #help_middle_text3{
            opacity: 0;
            line-height: 30px;
        }
        #help_middle_text4{
            opacity: 0;
            line-height: 30px;
        }
        #help_main1{
            display: block;
        }
        #help_main2{
            display: none;
        }
    </style>
{% endblock %}

